//Fonts
@font-face {
    font-family: 'heydings';
    src: url('/fonts/heydings_icons-webfont.eot'), url('/fonts/heydings_icons-webfont.ttf');
    font-weight: normal;
    font-style: normal;
}
@font-face {
    font-family: 'forque';
    src: url('/fonts/Forque-webfont.eot'), url('/fonts/Forque-webfont.ttf');
    font-weight: normal;
    font-style: normal;
}

// Colour theme from colorschemedesigner.com, http://colorschemedesigner.com/#3o21Tptd7g0g0
primary-1 = #0F3641
primary-2 = #133139
primary-3 = #092C36
primary-4 = #256071
primary-5 = #2D6271
complement-1 = #694015
complement-2 = #5C3C1C
complement-3 = #57320D
complement-4 = #8F5D2B
complement-5 = #8F6336
// Other colours.
shadow-colour        = #111
content-text-colour  = #FFF
content-text-alt     = #222
heading-background   = transparent
content-background   = #150A00
button-text-colour   = content-text-colour
button-text-alt      = content-text-alt
field-background     = #888
field-text-colour    = content-text-alt
link-colour          = content-text-alt
border-colour        = #333

// Padding standards
pad-l = 1em // Large
pad-s = 0.5em // Small
pad-t = 0.25em // Tiny

// Cross-browser over-rides.
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
box-sizing(type = border-box)
  -moz-box-sizing type
  -webkit-box-sizing type
  box-sizing type
box-shadow()
  -moz-box-shadow arguments
  -webkit-box-shadow arguments
  box-shadow arguments
transition(type = all, easing = ease-in-out, duration = .3s)
  -webkit-transition type easing duration
  -moz-transition type easing duration
  -ms-transition type easing duration
  -o-transition type easing duration
  transition type easing duration
transform()
  -webkit-transform arguments
  -moz-transform    arguments
  -ms-transform     arguments
  -o-transform      arguments
  transform         arguments

vertical-gradient(startColor, endColor)
  background-color startColor
  background -webkit-gradient(linear, left top, left bottom, from(startColor), to(endColor))
  background -webkit-linear-gradient(top, startColor, endColor)
  background -moz-linear-gradient(top, startColor, endColor)
  background -ms-linear-gradient(top, startColor, endColor)
  background -o-linear-gradient(top, startColor, endColor)

// General structural elements.

// Backgrounds.
.background-gradient
  vertical-gradient(primary-1, primary-5)
// Shadow.
.shadow
  box-shadow 0px 1px 10px -1px shadow-colour
.shadow-small
  box-shadow 0px 1px 6px -1px shadow-colour
.shadow-heading
  box-shadow 0px 3px 6px -2px shadow-colour
.text-shadow
  text-shadow 1px 1px 3px shadow-colour
// Rounding.
.rounded
  border-radius 10px
.top-rounded
  border-radius 10px 10px 0 0
// Bevels.
.bevel
  border-left 1px solid rgba(white, 0.25)
  border-top 1px solid rgba(white, 0.25)
  border-right 1px solid rgba(black, 0.25)
  border-bottom 1px solid rgba(black, 0.25)
.transition
  transition()
.decoration
  @extends .rounded
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none
  opacity 0.1

// Content panes and headings.
.content-pane
  position relative
  border 1px solid border-colour
  overflow hidden
.heading
  @extends .shadow-heading
  overflow hidden
  position relative
  min-height 2em
  padding pad-s
  color content-text-colour
  z-index 1
  border-bottom 1px solid border-colour
  &.bare
    margin-bottom 1em
  .buttons
    position absolute
    right pad-t
    top pad-t
    .button
      padding pad-t
      &.glyph
        font-size 1em
        position relative
        top -.5em
.content
  position relative
  padding pad-l pad-s

.columns
  margin 0
  padding 0
  text-align justify
  list-style-type none
  > li
    text-align left
    display inline-block
    width 49%
    position relative
    vertical-align top
    padding pad-s
    .buttons
      margin pad-s 0
  &.one > li
    width 100%
  &.two > li
    width 49%
  &:after
    content ''
    width 100%
    display inline-block

.button
  @extends .shadow-small
  @extends .rounded
  @extends .transition
  padding 0.5em
  display inline-block
  position relative
  &:hover
    background-image none
    background-color primary-5
    color content-text-alt
    text-shadow none
    cursor pointer
.buttons
  .button
    margin 0 pad-t

// Absolutely positioned popup elements.
.popup
  @extends .shadow
  @extends .rounded
  position absolute
  background-color rgba(content-background, 0.75)
  top 50%
  left 50%
  width 33%
  transform translate(-50%, -50%)
  z-index 9999

// General structural elements end.

// General elements
html
  *
    box-sizing border-box
body
  background-image url('/img/beer.jpg')
  background-attachment fixed
  background-size cover
  // font-family Verdana,Geneva,'DejaVu Sans',sans-serif
  font-family Constantia, "Lucida Bright", Lucidabright, "Lucida Serif", Lucida, "DejaVu Serif", "Bitstream Vera Serif", "Liberation Serif", Georgia, serif
  color content-text-colour
  padding pad-l
  font-size 1em
  margin auto
  &.fluid
    width 80%
a
  @extends .text-shadow
  text-decoration underline
  color link-colour
  .button
    text-decoration none
input[type=text],input[type=password],textarea
  @extends .rounded
  border none
  padding pad-s
  background-color field-background
  color field-text-colour
hr
  border-color border-colour
  margin pad-l 0

// App overrides.
.heading
  font-size 1.2em
  font-family 'forque'
.content-pane
  border 0
.button
  background-color rgba(primary-1, 0.66)
.bevel
  box-shadow 0em 0em .1em .1em shadow-colour
  border 1px solid border-colour
  border-right-color border-colour+40
  border-bottom-color border-colour+40
.spacer
  margin-top 2em

// App fonts
.forque
  font-family 'forque'
.glyph
  font-family 'heydings'
  font-size 2em

// App General
.feature
  display inline-block
  position relative
  font-size 7em
  text-shadow 3px 3px 5px shadow-colour
  line-height 1em
  .yay2
    color content-text-colour
    position absolute
    font-size .45em
    top 50%
    left 50%
    transform translate(-51%, -50%)

// App Specific structural elements.

// Pre-js loader info
.index-loader
  @extends .popup
  .content
    text-align center

// Bar loader image.
img.loader
  margin auto
  margin-bottom pad-l
  max-width 80%
  height auto
  display block

.heading.error
  background-color rgba(red, 0.5)

// Structural elements.
.body-shadow
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  box-shadow inset 0em 0em 10em 5em content-background
  z-index -1
.main
  @extends .rounded
  width 80%
  margin auto
  background-image url('/img/bodybkg.png')
  background-color rgba(content-background, 0.9)
  background-attachment fixed
  box-shadow 0em 0em 1em .25em shadow-colour
.site-header
  padding pad-s
  position relative
  margin-bottom 1em
  text-align center
  .text-shadow
    text-shadow 0em .5em .5em shadow-colour
  .title
    font-size 10em
    height 1.2em
    display inline-block
    position relative
    text-shadow 0em .05em .1em shadow-colour
  .feature
    position absolute
    right -.7em
    top 0
    font-size .7em
    transform rotate(-20deg)
    color #800

.digital-container
  text-align center
  top 0em
  font-family 'forque'
.digital
  font-size 6em
  height 1.3em
  text-shadow 0em .1em .1em shadow-colour
  display inline-block

.side-bar
  @extends .transition
  position fixed
  left 0
  color content-text-alt+20
  background-color #222
  top 20%
  z-index 9999
  ul
    box-shadow .1em .1em 1em .1em shadow-colour+20
    padding 0
    margin 0
    list-style-type none
    &:hover
      box-shadow .1em .1em 1em .1em shadow-colour+40
  li
    @extends .transition
    cursor pointer
    padding pad-s
    border-bottom 1px solid border-colour
    text-shadow 0em .1em .1em shadow-colour
    &:hover,&.active
      color content-text-colour
.side-board
  @extends .rounded
  box-shadow .5em .5em 3em .1em shadow-colour
  transition width ease-in-out 1s
  position absolute
  z-index 9999
  width 50vw
  background-color rgba(#111, 0.5)
  left 150%

.list
  @extends .rounded
  margin pad-s 0
  position relative
  img
    width 1.5em
    opacity 0.7
  .attr
    @extends .transition
    display inline-block
    width 10%
    text-align center
    cursor pointer
    vertical-align middle
    &.feature
      // transform rotate(-20deg)
      font-size 3em
      .yay2
        font-size .5em
    &.beer
      width 5em
    &.name
      @extends .forque
      font-size 1.5em
      width 50%
      text-align left
      .comment
        font-family Constantia
        font-size .75em
        height 1em
    &.comment
      @extends .rounded
      @extends .shadow
      text-align left
      width 80%
      padding pad-l
      display block
      position absolute
      background-color rgba(content-background, 0.75)
      z-index 9999
      input
        width 70%
    &.yes
      color rgba(#800, .9)
    &.no
      color primary-4
    &.comment-ind
      vertical-align middle
    &.comment-ind.is
      color content-text-colour
    &.comment-ind.isnot
      color content-text-alt+40

.message
  padding pad-s
  line-height 2em
  .attr
    padding pad-t
    @extends .rounded
  .name
    background-color rgba(primary-3, 0.5)
  .message-content
    background-color rgba(#BBB, 0.2)


// Media queries
@media (max-width: 1000px)
  body
    font-size 0.75em
@media (max-width: 500px)
  body
    font-size 0.66em
