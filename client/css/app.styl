//Fonts
@font-face {
    font-family: 'Radioland';
    src: url('/fonts/RADIOLAND-webfont.eot'), url('/fonts/RADIOLAND-webfont.ttf');
    font-weight: normal;
    font-style: normal;
}
@font-face {
    font-family: 'heydings';
    src: url('/fonts/heydings_icons-webfont.eot'), url('/fonts/heydings_icons-webfont.ttf');
    font-weight: normal;
    font-style: normal;
}

// Colour theme from colorschemedesigner.com, http://colorschemedesigner.com/#3o21Tptd7g0g0
primary-1 = #0F3641
primary-2 = #133139
primary-3 = #092C36
primary-4 = #256071
primary-5 = #2D6271
complement-1 = #694015
complement-2 = #5C3C1C
complement-3 = #57320D
complement-4 = #8F5D2B
complement-5 = #8F6336
// Other colours.
shadow-colour      = #222
content-text-color = #444
content-text-neutral = #999
content-text-alt   = #FFF
heading-background = complement-4
content-background = white
button-text-color  = content-text-color
field-background   = #888
field-text-color   = content-text-color

// Padding standards
pad-l = 1em // Large
pad-s = 0.5em // Small
pad-t = 0.25em // Tiny

// Cross-browser over-rides.
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
box-sizing(type = border-box)
  -moz-box-sizing type
  -webkit-box-sizing type
  box-sizing type
box-shadow()
  -moz-box-shadow arguments
  -webkit-box-shadow arguments
  box-shadow arguments
transition(type = all, easing = ease-in-out, duration = .3s)
  -webkit-transition type easing duration
  -moz-transition type easing duration
  -ms-transition type easing duration
  -o-transition type easing duration
  transition type easing duration

vertical-gradient(startColor, endColor)
  background-color startColor
  background -webkit-gradient(linear, left top, left bottom, from(startColor), to(endColor))
  background -webkit-linear-gradient(top, startColor, endColor)
  background -moz-linear-gradient(top, startColor, endColor)
  background -ms-linear-gradient(top, startColor, endColor)
  background -o-linear-gradient(top, startColor, endColor)

// General structural elements.

// Backgrounds.
.background-gradient
  vertical-gradient(primary-1, primary-5)
// Shadow.
.shadow
  box-shadow 0px 1px 10px -1px shadow-colour
.shadow-small
  box-shadow 0px 1px 6px -1px shadow-colour
.shadow-heading
  box-shadow 0px 3px 6px -2px shadow-colour
.text-shadow
  text-shadow 1px 1px 3px shadow-colour
// Rounding.
.rounded
  border-radius 3px
.top-rounded
  border-radius 3px 3px 0 0
// Bevels.
.bevel
  border-left 1px solid rgba(white, 0.25)
  border-top 1px solid rgba(white, 0.25)
  border-right 1px solid rgba(black, 0.25)
  border-bottom 1px solid rgba(black, 0.25)
.transition
  transition()
.decoration
  @extends .rounded
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none
  opacity 0.1
.glyph
  font-family 'heydings'
  font-size 2em

// Content panes and headings.
.content-pane
  position relative
  border 1px solid #EEE
  overflow hidden
  .heading
    @extends .shadow-heading
    background-color rgba(heading-background, 0.5)
    overflow hidden
    position relative
    min-height 2em
    padding pad-s
    color content-text-alt
    z-index 1
    border-radius 0 0 3px 0
    &.bare
      margin-bottom 1em
    .buttons
      position absolute
      right pad-t
      top pad-t
      .button
        padding pad-t
  .content
    position relative
    padding pad-l pad-s
    color content-text-color

.columns
  margin 0
  padding 0
  text-align justify
  list-style-type none
  > li
    text-align left
    display inline-block
    width 49%
    // min-height 23vh // 23% of viewport horizontal
    margin-bottom 2.5%
    vertical-align top
    padding pad-s
    .buttons
      margin pad-s 0
  &.one > li
    width 100%
  &.two > li
    width 49%
  &:after
    content ''
    width 100%
    display inline-block

.layout
  height 100%
  &.fadein
    opacity 0
     color rgba(content-text-alt, 0.75)

.button
  @extends .shadow-small
  @extends .rounded
  @extends .transition
  padding 0.5em
  display inline-block
  position relative
  &:hover
    background-image none
    background-color primary-5
    color content-text-alt
    text-shadow none
    cursor pointer
.buttons
  .button
    margin 0 pad-t

// Show and hide elements.
.show,.hide
  @extends .transition
  opacity 1
.hide
  opacity 0

// Absolutely positioned popup elements.
.popup
  @extends .shadow
  position absolute
  top 20%
  width 66%
  left 16%
  margin-left auto
  margin-right auto
  z-index 9999

// General structural elements end.

// General elements
html
  *
    box-sizing border-box
body
  background-image url('/img/beer.jpg')
  background-attachment fixed
  background-size contain
  font-family Verdana,Geneva,'DejaVu Sans',sans-serif
  color content-text-color
  padding pad-l
  font-size 2em
  margin auto
  &.fluid
    width 80%
a
  @extends .text-shadow
  text-decoration underline
  color primary-4
  .button
    text-decoration none
input[type=text],input[type=password],textarea
  @extends .rounded
  border-radius 10px
  border none
  padding pad-s
  background-color field-background
  color field-text-color

// Specific structural elements.

// Pre-js loader info
.index-loader
  @extends .popup
  .content
    text-align center

// Bar loader image.
img.loader
  margin auto
  margin-bottom pad-l
  max-width 80%
  height auto
  display block

.heading.error
  background-color rgba(red, 0.5)

.content-pane
  border 0
  overflow visible
.content
  color #BBB !important
.bevel
  box-shadow 0em 0em .1em .1em #444
  border 1px solid #444
  border-right-color #777
  border-bottom-color #777
.dark
  background-color rgba(#222, 0.5)  !important
.spacer
  margin-top 2em
.digital-container
  @extends .rounded
  box-shadow -.1em -.1em .5em .1em #333
  background-color #222
  padding pad-l
  color #BBB
  text-shadow .05em .05em .15em #888
  width 70%
  margin auto
.digital
  @extends .bevel
  @extends .rounded
  font-family 'Radioland'
  color rgba(red, 0.57)
  text-shadow .05em .05em 1em red
  background-color #222
  padding pad-s*1.3 pad-s pad-s*.7 pad-s*.7
  display inline-block
  width 2.3em
  box-shadow 0em 0em 1em .1em rgba(red, 0.2)

.list
  @extends .rounded
  background-color rgba(#222, 0.6)
  padding pad-s
  margin pad-s 0
  .attr
    @extends .transition
    display inline-block
    width 15%
    text-align center
    cursor pointer
    vertical-align middle
    &.name
      width 50%
      text-align left
    &.comment
      text-align left
      width 80%
      font-size 0.66em
      padding pad-l
      display block
      position absolute
      background-color rgba(primary-5, 0.5)
    &.yes
      color primary-4
    &.no
      color complement-4
    .comment-ind
      vertical-align middle
    .comment-ind.is
      color #CCC
    .comment-ind.isnot
      color #777

// Media queries
@media (max-width: 1000px)
  body
    font-size 0.75em
@media (max-width: 500px)
  body
    font-size 0.66em
